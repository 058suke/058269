---
export interface Props {
  pageTitle: string;
  pageDesc?: string;
}

const { pageTitle, pageDesc } = Astro.props;
---

<main id="main-content">
  <h1 class="animate-slide-in-title">{pageTitle}</h1>
  <p class="animate-slide-in-subtitle">{pageDesc}</p>
  <slot />
</main>

<style>
  main {
    @apply mx-auto mt-4 w-full max-w-3xl pt-4 px-4 pb-12 sm:mt-10;
  }
  #main-content {
    @apply mx-auto w-full max-w-3xl px-4 pb-12;
  }
  #main-content h1 {
    @apply text-2xl font-semibold;
  }
  #main-content p {
    @apply mt-2 mb-6 text-sm opacity-80;
  }
</style>
