---
export interface Props {
  name: string;
  size?: "sm" | "lg";
}

const { name, size = "sm" } = Astro.props;
---

<li
  class={`inline-block ${
    size === "sm" ? "my-1 underline-offset-4" : "my-3 mx-1 underline-offset-8"
  }`}
>
  <a
    href={`/tags/${name.toLowerCase()}`}
    class={`${size === "sm" ? "text-sm" : "text-lg"} pr-2 group`}
  >
    <span>#{name}</span>
  </a>
</li>

<style>
  a {
    @apply hover:text-skin-gray relative hover:opacity-50 hover:duration-200 focus-visible:p-1;
  }
</style>
